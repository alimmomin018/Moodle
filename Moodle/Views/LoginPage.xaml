<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Moodle.Views.LoginPage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout VerticalOptions="CenterAndExpand">
        <Image Source="logo.png" HorizontalOptions="CenterAndExpand" Margin="70,0,70,0"/>
        <StackLayout Padding="20,0,20,0">
            <Entry x:Name="studentId" Placeholder="Student Id"/>
            <Entry x:Name="password" Placeholder="Password" IsPassword="True"/>
            <Button Text="Login" Clicked="Button_Clicked" CornerRadius="30" BackgroundColor="#00ADE5" TextColor="White"/>
        </StackLayout>
    </StackLayout>
</ContentPage> 	